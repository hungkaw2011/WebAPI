@model IEnumerable<WebApp.UI.Models.DTO.RegionDto>


<div class="container">
    <div class="mt-3">
        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Privacy">Add Region</a>
        </div>
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Code
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        RegionImageUrl
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.Code
                        </td>
                        <td width="30%">
                            @obj.Name
                        </td>
                        <td>
                            <img src="@obj.RegionImageUrl" class="rounded" width="100%" />
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Home" asp-route-id="@obj.Id"
                               class="btn btn-light">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
